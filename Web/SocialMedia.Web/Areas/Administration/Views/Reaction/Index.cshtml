@using SocialMedia.Service.Models
@model List<SocialMediaReactionServiceModel>

<div class="d-flex justify-content-between">
    <h1>Reactions</h1>
    <div>
        <a href="/Administration/Reaction/Create" class="btn btn-secondary fw-bold create-reaction-button">Create</a>
    </div>
</div>
<hr class="hr-2 bg-black"/>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th class="col-1">#</th>
            <th class="col-3">Image</th>
            <th class="col-3">Reacion</th>
            <th class="col-5">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reaction in Model)
        {
            <tr>
                <th class="col-3">@reaction.Id</th>
                <td class="col-3"><img src="@reaction.Emote.CloudUrl" width="50px" height="50px"></td>
                <td class="col-3">@reaction.Label</td>
                <td class="col-2">
                    <a href="/Administration/Reaction/Edit?id=@reaction.Id" class="btn btn-warning">Edit</a>
                    <a href="/Administration/Reaction/Delete?id=@reaction.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>